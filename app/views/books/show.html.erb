<main class="mx-auto max-w-3xl p-6 bg-white rounded-lg shadow-lg">
  <!-- Book Title -->
  <h1 class="text-2xl font-bold text-gray-800 mb-4"><%= @book.title %></h1>

  <!-- Book Image -->
  <div class="mb-4">
    <img class="w-40 h-52 object-cover rounded-lg shadow" src="<%= @book.image_url %>" alt="<%= @book.title %>">
  </div>

  <!-- Book Details -->
  <div class="mb-4">
    <p class="text-lg font-semibold text-gray-700">Author: <%= @book.author %></p>
    <p class="text-gray-600 mt-2"><%= @book.summary %></p>
  </div>

  <!-- Why You'll Like It -->
  <div class="mt-6">
    <h3 class="text-lg font-semibold text-gray-800">Why You'll Like It:</h3>
    <p class="text-gray-700 mt-2"><%= @book.reason %></p>
  </div>

  <!-- Back to List Button -->
  <div class="mt-6">
    <%= link_to 'Back to Book List', books_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
</main>